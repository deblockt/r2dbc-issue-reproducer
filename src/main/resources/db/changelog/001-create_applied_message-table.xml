<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd">

    <changeSet id="create_applied-message" author="Thomas Deblock">
        <createTable tableName="applied_message" remarks="table with unique id">
            <column name="id" type="varchar2(55)" remarks="the unique random identifier">
                <constraints primaryKey="true" primaryKeyName="pk_applied_message"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>
